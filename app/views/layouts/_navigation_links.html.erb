<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="text-right">
        <% if admin_signed_in? %>
          <li><%= link_to 'Sign out', destroy_admin_session_path, :method=>'delete', class: 'btn btn-default btn-sm' %></li>
        <% else %>
          <li><%= link_to 'Sign in', new_admin_session_path %></li>
          <li><%= link_to 'Sign up', new_admin_registration_path %></li>
        <% end %>
      </div>
    </div>
  </div>
</div>

